<link rel="stylesheet" href="https://js.arcgis.com/4.9/esri/css/main.css">
<script src="https://js.arcgis.com/4.9/"></script>

<style>
  html,
  body,
  #viewDiv {
    padding: 0;
    margin: 0;
    height: 100%;
    width: 100%;
  }
</style>

<div id="viewDiv"></div>

<script>
  require([
      "esri/Map",
      "esri/views/SceneView",
      "esri/layers/GraphicsLayer",
      "esri/Graphic"
    ], (Map, SceneView, GraphicsLayer, Graphic) =>{

      let map = new Map({ basemap: "streets"});

      let graphicsLayer = new GraphicsLayer();

      var view = new SceneView({
          container: "viewDiv",
          map: map,
          center: [-77.307615, 38.830054],
          zoom: 15
        });

      markerSymbol = {
        type: "simple-marker", 
        color: [255, 0, 127],
        outline: { 
          color: [255, 255, 255],
          width: 3
        }
      };

      $.post('/getrecords').done((data) =>{
        let point, pointGraphic;
        data.forEach((point) =>{
          point = {
            type: 'point',
            x: point.longitude,
            y: point.latitude,
            z: point.altitude
          }

          pointGraphic = new Graphic({
            geometry: point,
            symbol: markerSymbol
          })
          graphicsLayer.add(pointGraphic);
        })
        map.add(graphicsLayer);
      });

      setInterval(() =>{
         $.post('/getlastrecord').done((data) =>{
             let point, pointGraphic;
             point = {
                type: 'point',
                x: data[0].longitude,
                y: data[0].latitude,
                z: data[0].altitude
             }

              pointGraphic = new Graphic({
              geometry: point,
              symbol: markerSymbol
          })

          graphicsLayer.add(pointGraphic);
          map.add(graphicsLayer);
         });
      }, 70 * 1000)
    });
</script>
</head>